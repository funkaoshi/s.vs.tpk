{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\"?>" | safeHTML }}
<feed xmlns="http://www.w3.org/2005/Atom">
  <id>{{ .Site.BaseURL }}</id>
  <title>{{ .Site.Title }}</title>
  <updated>{{ now.Format "2006-01-02T15:04:05Z07:00" }}</updated>
  <link type="application/atom+xml" rel="self" href="{{ "atom.xml" | absURL }}"/>
  <author>
    <name>Ramanan Sivaranjan</name>
    <email>ramanan@funkaoshi.com</email>
    <uri>http://ramanan.sivaranjan.com</uri>
  </author>
  <rights>Â© {{ now.Format "2006" }} Ramanan Sivaranjan</rights>
  {{- range .Site.RegularPages }}
  <entry>
    <id>{{ .Permalink }}</id>
    <title>{{ .Title | htmlEscape }}</title>
    <updated>{{ .Date.Format "2006-01-02T15:04:05Z07:00" }}</updated>
    <author>
      <name>Ramanan Sivaranjan</name>
      <uri>http://ramanan.sivaranjan.com/</uri>
    </author>
    <content type="html">{{ .Content | htmlEscape }}</content>
    <link type="text/html" rel="alternate" href="{{ .Permalink }}"/>
    <published>{{ .Date.Format "2006-01-02T15:04:05Z07:00" }}</published>
  </entry>
  {{- end }}
</feed>
